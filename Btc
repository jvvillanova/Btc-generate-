    <script>
        // Chat Simulation
        const chatBox = document.getElementById('chat-box');
        const users = ['CryptoKing88', 'SatoshiNakamoto_Fan', 'X_Cloud_X', 'MiningMaster', 'BullRun2026', 'Elena_BTC', 'DevOps_Zero'];
        const messages = [
            "Just finished the simulation, the UI is sick!",
            "Does anyone know if the simulated hash rate matches real ASICs?",
            "WOW, it actually finished the blocks in under 2 mins.",
            "Testing with 0.5 BTC simulation, looks smooth.",
            "I love the neon effects on this dashboard.",
            "Verified my simulated address perfectly.",
            "The terminal logs look so realistic!",
            "Great tool for visualizing how blockchain traffic works."
        ];

        function addChatMessage() {
            const user = users[Math.floor(Math.random() * users.length)];
            const text = messages[Math.floor(Math.random() * messages.length)];
            const msgHtml = `<div class="chat-msg"><span class="chat-user">${user}</span><span class="chat-text">${text}</span></div>`;
            chatBox.insertAdjacentHTML('beforeend', msgHtml);
            chatBox.scrollTop = chatBox.scrollHeight;
            if(chatBox.children.length > 20) chatBox.children[0].remove();
        }
        setInterval(addChatMessage, 3000);
        for(let i=0; i<5; i++) addChatMessage();

        // Slider logic
        const range = document.getElementById('btc-range');
        const display = document.getElementById('val-display');
        range.oninput = (e) => display.innerText = parseFloat(e.target.value).toFixed(3);

        // Logic
        function validateAndStart() {
            const addr = document.getElementById('wallet-addr').value;
            const error = document.getElementById('wallet-error');
            
            // Basic BTC address regex (Accepts 1..., 3..., bc1...)
            const btcRegex = /^(1|3|bc1)[a-zA-Z0-9]{25,59}$/;
            
            if (!btcRegex.test(addr)) {
                error.style.display = 'block';
                return;
            }
            
            error.style.display = 'none';
            document.getElementById('setup-ui').style.display = 'none';
            document.getElementById('process-ui').style.display = 'block';
            runTerminal();
        }

        async function typeLog(txt, delay = 600) {
            const term = document.getElementById('terminal');
            term.style.display = 'block';
            const div = document.createElement('div');
            div.innerHTML = `> ${txt}`;
            term.appendChild(div);
            term.scrollTop = term.scrollHeight;
            return new Promise(r => setTimeout(r, delay));
        }

        async function runTerminal() {
            const fill = document.getElementById('progress-fill');
            document.getElementById('pb-wrap').style.display = 'block';
            
            const logs = [
                "Initializing node connection...",
                "Pinging simulated satellites...",
                "Mapping peer-to-peer network...",
                "Analyzing difficulty epoch...",
                "Generating Merkle Root (Simulated)...",
                "Broadcasting transaction request..."
            ];

            for(let i=0; i<logs.length; i++) {
                await typeLog(logs[i]);
                fill.style.width = (i + 1) * 10 + "%";
            }

            setTimeout(() => {
                document.getElementById('v-modal').style.display = 'flex';
            }, 500);
        }

        async function finalStep() {
            document.getElementById('v-modal').style.display = 'none';
            const fill = document.getElementById('progress-fill');
            
            const logs = [
                "Incoming simulated verification detected...",
                "Block confirmation 1/3...",
                "Block confirmation 2/3...",
                "Block confirmation 3/3...",
                "Simulation finalizing...",
                "Cleaning temporary data..."
            ];

            for(let i=0; i<logs.length; i++) {
                await typeLog(logs[i], 800);
                fill.style.width = 60 + ((i + 1) * 6.5) + "%";
            }

            document.getElementById('process-ui').style.display = 'none';
            document.getElementById('final-ui').style.display = 'block';
        }
    </script>
